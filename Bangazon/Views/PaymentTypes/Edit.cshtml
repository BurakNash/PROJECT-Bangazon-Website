@model Bangazon.Models.PaymentType

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PaymentType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentTypeId" />
            <div>
                <p><strong>Payment Type</strong></p>
                <p>@Model.Description</p>
            </div>
            <div>
                <p><strong>Account Number</strong></p>
                <p>@Model.LastFour</p>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
